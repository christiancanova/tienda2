    <% } %>

    <!-- ACTUALIZAR PRODUCTO -->
    <%if (content=='actualizarProducto' ) { %>
      <%- include('./partials/form-update.ejs')%>
    <% } %>

  

    <script src="/socket.io/socket.io.js"></script>
